{
    "compilerOptions": {
        "allowJs": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2022",
        "sourceMap": true,
        "outDir": "./.tmp/build/",
        "moduleResolution": "node",
        "declaration": true,
        "lib": [
            "es2022",
            "dom"
        ],
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false, 
        "strictNullChecks": false,
        "noImplicitReturns": true
    },
    "files": [
        "./src/visual.ts"
    ],
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".tmp"
    ]
}